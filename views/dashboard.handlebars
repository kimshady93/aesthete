{{!-- loggedIn users will be able to see the items saved to grid --}}

<header>
    <nav class="navbar sticky-top">
        <!-- logo -->
        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="/assets/logo.jpg" alt="aesthete logo" id="logo" style="max-height: 80px">
            </a>
        </div>
        <div class="h1 mt-3 dashboard-title">
            <h1> {{ username }}'s Grid </h1>
        </div>
        <div class="float-right" id="nav-links">
            <button id="logout-btn" class="btn btn-light"> Log Out </button>
        </div>
        </div>
</header>

<section class="text-center pt-2" title="Add fav!">
    <button id="add-new" class="button add-button"> <b> + Add new </b> </button>
</section>

{{> addform}}

<!-- user's grid -->
<div class="container user-grid mt-4">
    {{#each image_url}}
    <div class="columns">
        <div class="column">
            <img class="rounded" src={{ this.image_tag }}>
        </div>
    </div>
    {{/each }}
</div>