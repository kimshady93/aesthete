<div class="wrapper">
    <header>
        <!-- navbar -->
        <nav class="navbar is-white">
            <!-- logo -->
            <div class="navbar-brand p-1">
                <a class="navbar-item">
                    <img src="logo.jpg" alt="aesthete logo" id="logo" style="max-height: 80px">
                </a>
            </div>
            <div class="float-right title-login">
                <h1> Aesthete </h1>
            </div>
        </nav>
    </header>
</div>

<div class="container-fluid row pt-5">
    <!-- log in form -->
    <form class="col-12 col-sm-6 mt-3">
        <h3 class="my-2"> Log in: </h3>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn login-btn"><span> Log In </span></button>
    </form>

    <!-- sign up form -->
    <form class="col-12 col-sm-6 mt-3">
        <h3 class="my-2"> Create an account: </h3>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn login-btn"> <span> Sign Up </span></button>
    </form>
</div>